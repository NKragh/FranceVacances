        <!--NAVBAR-->
        <StackPanel>
            <Button x:Name="houseButton" Content="Create House" Click="HouseButton_OnClick"/>
        </StackPanel>

        <ContentControl Grid.Row="3" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="6" Content="{Binding}"/>

        <!--Frame-->
        <!--The pages load into this container-->
        <Frame x:Name="Index" NavigationUIVisibility="Hidden"/>
        
        <!--SØGEFUNKTION-->
        <TextBox x:Name="travelType" Grid.Row="2" Grid.Column="0" Text="Skriv din rejsetype her" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox x:Name="airportTo" Grid.Row="2" Grid.Column="1" Text="Afrejse" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox x:Name="airportFrom" Grid.Row="2" Grid.Column="2" Text="Destination" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <DatePicker x:Name="dateInput" Grid.Row="2" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="30"/>
        <TextBox x:Name="numberOfTravelers" Grid.Row="2" Grid.Column="4" Text="Vælg antal rejsende" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button Grid.Row="2" Grid.Column="5" Width="100" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Søg" Click="SearchButton_Click"/>
